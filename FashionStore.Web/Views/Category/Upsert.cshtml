@using FashionStore.Models.Models
@model Category

@{
    ViewBag.Title = Model.Id == 0 ? "Create Category" : "Edit Category";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Upsert" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Parent Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.ParentCategories">
            <option value="">-- Select Parent Category --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">@Model.Id == 0 ? "Create" : "Save Changes"</button>
</form>