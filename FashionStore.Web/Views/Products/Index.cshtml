@using FashionStore.Models.Models
@model IEnumerable<Product>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="CreateProduct" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(x => x.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.ShortDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Colors)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.SubCategoryId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.ImageUrl" width="200px" height="150px" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    @* <td>@item.isAvailable</td>
                    <td>@item.Category.Name</td> *@
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Products" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Products" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
