@using FashionStore.Models.Models
@model IEnumerable<Color>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Color List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Color" asp-action="CreateColor" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create Color
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.ImageUrl)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.HexValue)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.ImageUrl" width="100px" height="50px" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.HexValue</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Color" asp-action="EditColor" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Color" asp-action="DeleteColor" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
