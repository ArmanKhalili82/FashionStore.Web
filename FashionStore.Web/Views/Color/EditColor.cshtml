@using FashionStore.Models.Models
@model Color

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Color</h2>
            <hr />
        </div>

        <div class="col-8">
            <div class="mb-3 row">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3 row">
                <label asp-for="HexValue" class="p-0"></label>
                <input asp-for="HexValue" class="form-control" />
                <span asp-validation-for="HexValue" class="text-danger"></span>
            </div>

            <div class="mb-3 row">
                <label asp-for="ImageUrl" class="p-0"></label>
                <input asp-for="ImageUrl" class="form-control" type="file" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="col-3">
            <img src="~/@Model.ImageUrl" width="100%" />
        </div>

        <div class="row row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Color" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
