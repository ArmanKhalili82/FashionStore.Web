@using FashionStore.Models.Models
@model IEnumerable<SubCategory>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Sub Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="SubCategory" asp-action="CreateSubCategory" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create Sub Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(x => x.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.CategoryId)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="SubCategory" asp-action="EditSubCategory" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="SubCategory" asp-action="DeleteSubCategory" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

