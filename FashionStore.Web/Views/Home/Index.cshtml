@model FashionStore.ViewModels.HomePageViewModel

@{
    ViewData["Title"] = "Home";
}

<!-- Carousel Section -->
<div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.CarouselProducts.Count; i++)
        {
            var product = Model.CarouselProducts[i];
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="~/@product.ImageUrl" class="d-block w-100" alt="@product.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@product.Name</h5>
                    <p>@product.ShortDescription</p>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Featured Products Section -->
<section>
    <h2 class="mt-5">Featured Products</h2>
    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="~/@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <a href="@Url.Action("Details", "Home", new { id = product.Id })" class="btn btn-primary">View Product</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Popular Products Section -->
<section>
    <h2 class="mt-5">Popular Products</h2>
    <div class="row">
        @foreach (var product in Model.PopularProducts)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="~/@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <a href="@Url.Action("Details", "Home", new { id = product.Id })" class="btn btn-primary">View Product</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        @foreach (var product in Model.ShowAllProducts)
        {
            <div class="col-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">
                            <label style="font-size: 1rem; color: steelblue">@product.Name</label>
                        </h4>
                    </div>
                    <img src="~/@product.ImageUrl" alt="Card Image" class="card-img-top" style="height: 18em;" />
                    <div class="card-header">
                        <div class="d-flex justify-content-between alignalign-items-center">
                            <div class="btn-group">
                                <label style="font-size: 1rem;color: orange"><b>Price : @product.Price</b></label>
                            </div>
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right btn-outline-info">More Info</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
